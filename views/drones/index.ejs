<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs", {title: "Welcome to the Drone Catalog" }) %>

    <body>
        <%- include("../partials/nav.ejs") %>
            <h1>All Drones</h1>
            <% if(allDrones.length===0) { %>
                <p>No drones available. Please add a new done on <a href="/drones/new">Add a Drone Page</a></p>

                <% } %>
                    <ul>
                        <% allDrones.map(drone=> { %>
                            <li>
                                <a href="/drones/<%= drone.id %>">
                                    <%= drone.name %>

                                        <div>
                                            <img height=300px width=500px src="<%= drone.image %>"
                                                alt="<%=drone.name %>" />
                                        </div>
                            </li>

                            <% }) %>
                    </ul>
    </body>

</html>